[alias]
    br = branch
    ci = commit
    co = checkout
    st = status
    stat = status
[user]
    name = Dominic Zirbel
    email = dominiczirbel@gmail.com
[core]
    editor = nano -r 72
[push]
    default = upstream
[branch]
    autosetuprebase = always
[status]
    #short = true
    #branch = true
[alias]
    logs = log --pretty=format:'%Cred%H%Creset -%C(yellow)%d%Creset %s %Cgreen(%ci) %C(bold blue)<%an>%Creset'
    bio = pull --rebase origin master # Bring it On
    commend = commit --amend --no-edit
    doit = !git add -A && git commend && git bio && git review
[pull]
    rebase = true
